{
  "name": "@xiaomuzhu/rc-carousel",
  "description": "carousel for react",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/xiaomuzhu/rc-carousel"
  },
  "author": "xiaomuzhu",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:w": "jest --watch",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "npm run format && npm run build",
    "example": "node setup.js",
    "format": "prettier --write '{.,__tests__,src/**}/*.{ts,tsx,css,less,scss}'",
    "style:lint": "stylelint src/**/*.{scss,css,less} --fix",
    "ts:lint": "tslint -p .",
    "lint": "npm run style:lint && npm run ts:lint",
    "pretest": "npm run lint",
    "commit": "git-cz",
    "release": "standard-version",
    "prestart": "cd example && npm install && npm run start",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/build"
  },
  "dependencies": {
    "jest-styled-components": "^6.3.1"
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@svgr/rollup": "^4.0.3",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.9",
    "@types/react": "^16.7.6",
    "@types/react-dom": "^16.0.9",
    "@types/styled-components": "^4.1.2",
    "commitizen": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.1.4",
    "jest": "^23.6.0",
    "jest-css-modules-transform": "^2.1.1",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-test-renderer": "^16.6.3",
    "regenerator-runtime": "^0.12.1",
    "rollup": "^0.67.3",
    "rollup-plugin-babel": "^4.1.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^1.6.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "rollup-plugin-url": "^2.0.1",
    "shelljs": "^0.8.3",
    "standard-version": "^4.4.0",
    "styled-components": "^4.1.2",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "files": [
    "dist"
  ],
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css}": [
      "npm run format",
      "git add"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint",
      "git add"
    ]
  }
}
